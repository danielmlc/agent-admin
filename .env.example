# ===================================
# Agent Admin 环境变量配置示例
# ===================================
# 复制此文件为 .env 并填写实际值

# Node 环境
NODE_ENV=production

# 应用配置
APP_PORT=3001
APP_PREFIX=api

# 数据库配置
DB_TYPE=better-sqlite3
DB_DATABASE=/app/data/database.sqlite
DB_SYNCHRONIZE=false
DB_LOGGING=false

# Redis 配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT 令牌密钥(请使用随机生成的强密钥)
JWT_ACCESS_SECRET=your-super-secret-access-key-change-me
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-me
JWT_ACCESS_EXPIRE=2h
JWT_REFRESH_EXPIRE=7d

# GitHub OAuth 配置
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3001/api/auth/oauth/github/callback
GITHUB_FRONTEND_CALLBACK=http://localhost:3001/login.html#/oauth-callback
GITHUB_FRONTEND_LOGIN=http://localhost:3001/login.html

# 微信 OAuth 配置(可选)
WECHAT_APP_ID=your-wechat-appid
WECHAT_APP_SECRET=your-wechat-secret
WECHAT_CALLBACK_URL=http://localhost:3001/api/auth/wechat/callback

# 短信服务配置(阿里云)
SMS_PROVIDER=aliyun
SMS_ACCESS_KEY_ID=your-aliyun-access-key-id
SMS_ACCESS_KEY_SECRET=your-aliyun-access-key-secret
SMS_SIGN_NAME=your-sms-sign-name
SMS_TEMPLATE_CODE=SMS_xxxxxxx

# 安全配置
SECURITY_LOGIN_FAIL_LIMIT=5
SECURITY_LOGIN_FAIL_LOCK_TIME=600
SECURITY_SMS_CODE_EXPIRE=300
SECURITY_SMS_CODE_INTERVAL=60
SECURITY_SMS_DAILY_LIMIT=5
SECURITY_CAPTCHA_EXPIRE=120

# 日志配置
LOG_LEVEL=info
LOG_MAX_FILES=30d
